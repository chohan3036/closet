<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.Home"
    android:orientation="vertical">



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/mainbackground" />

    <TextView
        android:id="@+id/weather_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_corner"
        android:text="오늘의 날씨는 ..."
        android:fontFamily="@font/nanum"
        android:layout_gravity="top|center_horizontal"
        android:textSize="20sp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanum"
        android:foregroundTint="#2196F3"
        android:textSize="30sp"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="20dp"
        android:text="Click!"
        android:textColor="@android:color/black"/>

    <ImageButton
        android:id="@+id/BtnActivityOne"
        android:layout_width="58dp"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="right|center_vertical"
        android:layout_marginTop="70dp"
        android:layout_marginRight="20dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/tap_finger" />

    <Button
        android:id="@+id/testCV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수빈 test"
        android:layout_gravity="bottom"/>


    <ImageView
        android:id="@+id/mapButton"
        android:layout_width="89dp"
        android:layout_height="69dp"
        android:layout_gravity="top"
        android:clickable="true"
        android:src="@drawable/lightbulb"
        android:text="코디 팁!" />

    <TextView
        android:layout_marginTop="70dp"
        android:id="@+id/tip_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/nanum"
        android:foregroundTint="#2196F3"
        android:text="오늘의 코디 팁!"
        android:textColor="@android:color/black"
        android:textSize="25sp"

        />
</FrameLayout>