<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFEB3B"
    android:orientation="vertical"
    tools:context=".Recommend.Recommend">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ece6cc"
        android:layout_gravity="center">

        <TextView
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/nanum"
            android:text="   추천 기준을 선택해 주세요"
            android:textSize="20sp"/>

        <Spinner
            android:id="@+id/recommend_spinner"
            android:theme="@style/SpinnerTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montaga"
            android:layout_weight="1"
            android:entries="@array/recommend_array1"/>

<!--
        <Spinner
            android:id="@+id/recommend_spinner_like"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_weight="1"
            android:entries="@array/recommend_array3"></Spinner>
        />
-->
    </LinearLayout>

        <GridView
            android:id="@+id/recommend_grid"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:horizontalSpacing="10dp"
            android:numColumns="2"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dp" />

</LinearLayout>