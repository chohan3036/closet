<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="300dp"
        android:background="#EDC6C6"
        android:layout_height="500dp">

        <ImageView
            android:src="@drawable/emptylike"
            android:id="@+id/cloth_image"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/cloth_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum"
            android:layout_marginTop="10dp"
            android:text="color"
            android:selectAllOnFocus="true"/>

        <EditText
            android:id="@+id/cloth_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum"
            android:layout_marginTop="10dp"
            android:text="category"
            android:selectAllOnFocus="true" />

        <EditText
            android:id="@+id/cloth_description"
            android:layout_width="300dp"
            android:layout_height="112dp"
            android:layout_marginTop="20dp"
            android:background="#FFFFFF"
            android:fontFamily="@font/nanum"
            android:hint="옷에 대한 설명을 작성해주세요" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:fontFamily="@font/montaga"
            android:id="@+id/Cancel"
            android:background="#90ee90"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/montaga"
            android:text="Ok"
            android:id="@+id/Ok"
            android:background="#90ee90"/>
    </LinearLayout>
</LinearLayout>
