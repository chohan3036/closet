<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="100dp">

    <EditText
        android:id="@+id/id_signUp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fontFamily="@font/nanum"
        android:hint="id를 입력해주세요"
        android:textColorHint="#000000" />

    <EditText
        android:hint="nickName을 입력해주세요"
        android:textColorHint="#000000"
        android:id="@+id/nickname_signUp"
        android:layout_width="match_parent"
        android:fontFamily="@font/nanum"
        android:layout_height="0dp"
        android:layout_weight="1"/>

   <EditText
       android:id="@+id/pwd_signUp"
       android:fontFamily="@font/nanum"
       android:textColorHint="#000000"
       android:hint="pwd*"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1"/>


    <EditText
        android:id="@+id/age_signUp"
        android:layout_width="match_parent"
        android:fontFamily="@font/nanum"
        android:layout_height="0dp"
        android:textColorHint="#000000"
        android:layout_weight="1"
        android:hint="age 연령대별 선택으로 바꾸기 "/>

    <RadioGroup
        android:id="@+id/sexGroup"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/female"
            android:fontFamily= "@font/montaga_regular"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="female"

           />

        <RadioButton
            android:id="@+id/male"
            android:fontFamily= "@font/montaga_regular"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="male"
            />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="100dp"
        android:layout_marginRight="30dp">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="취소"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/nanum"
            android:background="#eee6c4"
            android:id="@+id/cancel_signUp"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="확인"
            android:fontFamily="@font/nanum"
            android:background="#eee6c4"
            android:id="@+id/ok_singUp"/>
    </LinearLayout>

</LinearLayout>